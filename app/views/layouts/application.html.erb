<!DOCTYPE html>
<html>
<head>
  <title>Possessions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='title-bar <%= 'title-bar--unlogged-in' if !current_user %>'>
  <div class='title-bar__links'>
    <% if current_user %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      <%= link_to 'New Possession', new_possession_path %>
    <% else %>
      <%= link_to 'Login', new_user_session_path %>
    <% end %>
  </div>

  <%= link_to 'Possessions', root_path, class: 'title-bar__title' %>
</div>

<% if notice.present? %>
  <p class="flash flash--notice"><%= notice %></p>
<% end %>

<% if alert.present? %>
  <p class="flash flash--alert"><%= alert %></p>
<% end %>

<div class='white-out'></div>

<%= yield %>

</body>
</html>
