.possessions-total
  Total:
  %span= @possession_count

.content-wrapper
  .possession-column.possession-column--left
    - @odd_categories.each do |category|
      = render 'components/possession_group', category: category

  .possession-column.possession-column--right
    - @even_categories.each do |category|
      = render 'components/possession_group', category: category

    .possession-group
      .possession-group__title= "Misc (#{@uncategorized_possessions.count})"
      - @uncategorized_possessions.each do |possession|
        = render 'components/possession_box', possession: possession
