%h1
  Possessions
  (
  = @possessions.count
  )

- @possessions.each do |possession|
  .possession-box
    .possession-box__name= possession.name
    .possession-box__description= possession.description
    .possession-box__image= image_tag possession.image_url
    .possession-box__edit= link_to 'Edit', edit_possession_path(possession)
    = link_to 'I never had this.', possession, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Possession', new_possession_path

